{
    "swagger": "2.0",
    "info": {
        "description": "This is the API documentation for the trip server.",
        "title": "Trip Server API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "support@trip-server.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8083",
    "basePath": "/",
    "paths": {
        "/ping": {
            "get": {
                "description": "Check if the API is running",
                "tags": [
                    "health"
                ],
                "summary": "Check API status",
                "responses": {
                    "200": {
                        "description": "pong",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/trip": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "creates trip",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "trip"
                ],
                "summary": "Creates Trip",
                "parameters": [
                    {
                        "description": "Create Trip Request",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/shared.CreateTripRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/shared.CreateTripResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "shared.AreaInfo": {
            "type": "object",
            "properties": {
                "avgLat": {
                    "type": "number"
                },
                "avgLon": {
                    "type": "number"
                },
                "counts": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                }
            }
        },
        "shared.CloseNode": {
            "type": "object",
            "properties": {
                "area": {
                    "type": "string"
                },
                "filter": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lat": {
                    "type": "number"
                },
                "lon": {
                    "type": "number"
                }
            }
        },
        "shared.CreateTripRequest": {
            "type": "object",
            "required": [
                "areas",
                "filters"
            ],
            "properties": {
                "areas": {
                    "type": "string"
                },
                "distance": {
                    "type": "string"
                },
                "filters": {
                    "type": "string"
                }
            }
        },
        "shared.CreateTripResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/shared.Place"
                    }
                },
                "id": {
                    "type": "string"
                },
                "info": {
                    "$ref": "#/definitions/shared.Info"
                }
            }
        },
        "shared.Info": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/shared.AreaInfo"
            }
        },
        "shared.Place": {
            "type": "object",
            "properties": {
                "area": {
                    "type": "string"
                },
                "closeNodes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/shared.CloseNode"
                    }
                },
                "filter": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lat": {
                    "type": "number"
                },
                "lon": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}